{
  "name": "electron-solidjs-boilerplate",
  "version": "1.0.0",
  "author": "Dorage",
  "scripts": {
    "build-electron":"tsc -p tsconfig.node.json",
    "build-solid":"vite build",
    "build": "npm run build-electron && npm run build-solid",
    "watch": "vite build --watch",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build-electron && electron ./dist/main.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "autoprefixer": "^10.4.14",
    "electron": "^24.3.0",
    "eslint": "^7.32.0",
    "postcss": "^8.4.24",
    "solid-devtools": "^0.27.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-solid": "^2.7.0"
  },
  "dependencies": {
    "solid-js": "^1.8.1"
  }
}
